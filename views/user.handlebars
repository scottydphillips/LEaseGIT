<div>
	<h2>Welcome, {{name}}</h2>
</div>

{{#if property.length}}
<h3>Properties Owned:</h3>
	{{#each properties as |property|}}
	<div>
		<h4><a href='/property/{{property.id}}'>{{property.address}}</a>
		</h4>
	</div>
	{{/each}}
{{/if}}

<form>
	<h3>Create a new listing:</h3>
	<div>
		<label for='address'>Address of property:</label>
		<input type='text' id='property-address' name='property-address'>
	</div>
	<div>
		<label for='lease-length'>Length of Time Available in Days:</label>
		<input type='number' id='lease-length' name='lease-length'>
	</div>
	<div>
		<button type='submit'>Create Listing</button>
	</div>
</form>

