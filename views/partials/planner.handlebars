
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Styles -->
    <link rel="stylesheet" href="/css/plan.css">
    <!-- Scripts -->
    <script src="/matter/matter.min.js" type="text/javascript"></script>
    
    <title>Document</title>
</head>
<body>
    <div style="display: inline-block; float:left;">
    <h4 style='text-decoration: underline;'>Flooring</h4>
    <select id="floor-picker" onchange="selectFloor()">
        <option value="chevron-hardwood-floor" selected="selected"">Chevron Hardwood</option>
        <option value="parquet-hardwood-floor">Parquet Hardwood</option>
        <option value="mosaic-hardwood-floor">Mosaic Hardwood</option>
        <option value="carpet-floor">Tan Carpet</option>
        <option value="carpet-floor-2">Eggshell Carpet</option>
      </select>
    </div>

    <div style="display: inline-block; margin-left: 20%; margin-right: 20%;">
    <h4 style='text-decoration: underline;'>New Furniture</h4>
    <select id="furniture-picker" onchange="selectNewFurniture()">
        <option value="sofa" selected="selected"">Sofa</option>
        <option value="loveseat">Loveseat</option>
        <option value="single-bed">Single Bed</option>
        <option value="twin-bed">Twin Bed</option>
        <option value="plush-chair">Plush Chair</option>
        <option value="small-chair">Gray Chair</option>
        <option value="white-chair">White Chair</option>
        <option value="wood-chair">Wood Chair</option>
        <option value="nightstand">Nightstand</option>
        <option value="tv-stand">TV Stand</option>
        <option value="workspace">Work Space</option>
        <option value="dining-room-table">Dining Room Table</option>
        <option value="wood-table">Wood Table</option>
        <option value="glass-table">Glass Table</option>
        <option value="round-marble-table">Round Marble Table</option>
        <option value="round-wood-table">Round Wood Table</option>
        <option value="round-glass-table">Round Glass Table</option>
        <option value="marble-counter">Countertop</option>
        <option value="kitchen-sink">Kitchen Sink</option>
        <option value="fridge">Fridge</option>
        <option value="double-fridge">Double Fridge</option>
        <option value="stove">Gas Stove</option>
        <option value="electric-stove">Electric Stove</option>
        <option value="bath">Bath</option>
        <option value="patio-table-with-chairs">Patio Table & Chairs</option>
        <option value="potted-plant">Potted Plant</option>
        <option value="big-potted-plant">Potted Plant</option>
      </select>
    </div>
    <div style="display: inline-block; float: right;">
        <h4 style='text-decoration: underline'>Decoration Tools</h4>
        <p><i>Click to select furniture</i><br>
        Rotate: A/D or W/S or Left/Right<br>
        Remove: R or Delete or Backspace</br>
        New Copy: N or C or Insert<br></p>
    </div>

    <main id="stage">
        
    </main>

    <script src="/js/plan.js" type="text/javascript"></script>
    
</body>
