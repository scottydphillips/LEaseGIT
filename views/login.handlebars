<div class='row'>
	<div class='col-md-6'>
		<h2>Login</h2>
		<form class='form login-form'>
			<div class='form-group'>
				<label for='email-login'>Email Address:</label>
				<input class='form-input' type='text' id='email-login'>
			</div>
			<div class='form-group'>
				<label for='password-login'>Password</label>
				<input class='form-input' type='password' id='password-login'>
			</div>
			<div class='form-group'>
				<button class='btn btn-primary' id='login-button' type='submit'>Login</button>
			</div>
		</form>
	</div>
<div class='col-md-6'>
	<h2>Sign Up</h2>
		<form class='form signup-form'>
			<div class='form-group'>
				<label for='name-signup'>Name:</label>
				<input class='form-input' type='text' id='name-signup'>
			</div>
			<div class='form-group'>
				<label for='email-signup'>Email Address:</label>
				<input class='form-input' type='text' id='email-signup'>
			</div>
			<div class='form-group'>
				<label for='password-signup'>Password:</label>
				<input class='form-input' type='password' id='password-signup'>
			</div>
			<div class='form-group'>
				<form id='radio-form'>
					<p>Are you a property owner or a tenant?</p>
					<label for='owner-signup'>Property Owner</label>
					<input class='radio' type='radio' name="selectRole" id='owner-signup' value='owner'>
					<label for='tenant-signup'>Tenant</label>
					<input class='radio' type='radio' name="selectRole" id='tenant-signup' value='tenant'>
			</div>
			<div class='form-group'>
				<button class='btn btn-primary' id='signup-button' type='submit'>Sign Up!</button>
			</div>				
			</form>
		</form>
	</div>
<script src='./js/login.js'></script>